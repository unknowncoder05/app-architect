{
    "attributes":{
        "id": {"type":"id"},
        "name":{"type":"str", "max":20, "required":true},
        "email":{"type":"email", "max":20, "required":true},
        "password":{"type":"password", "max":100, "required":false}
    },
    "create":{
        "request":{
            "__extends":{
                "from":"attributes",
                "__excludes":["id"]
            }
        },
        "response":{
            "__extends":{
                "from":"attributes",
                "__includes":["id"]
            }
        }
    },
    "list":{
        "response":{
            "__extends":{
                "from":"attributes",
                "__excludes":["password"]
            }
        }
    },
    "get":{
        "request":{
                "__extends":{
                "from":"attributes",
                "__includes":["id"]
            }
        },
        "response":{
            "__extends":{
                "from":"attributes",
                "__excludes":["id"]
            }
        }
    }
}